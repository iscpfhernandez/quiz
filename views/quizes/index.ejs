<form method="get" action=" /quizes">
   <label>Texto a buscar:</label>
   <input type="text" name="search" placeholder="Texto a buscar" <% if(busqueda) {%> value="<%= busqueda %>" <%}%>>
   <button type="submit">Buscar</button>
</form>
<!--
<% if (typeof busqueda !== 'undefined' && busqueda !== null)%> 
<% if(busqueda) {%> <p>El texto a buscar es <%= busqueda %></p> <%}%>
-->
<table>
<% var i; for (i=0; i< quizes.length; i++) { %>
  <tr>
    <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a> : <%= quizes[i].tema %></td>
<% if (session.user) { %>
    <td><a href="quizes/<%= quizes[i].id %>/edit"><button type="button">Editar</button></a></td>
    <td>
      <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">Borrar</button>
      </form>
    </td>
<% } %>
  </tr>  
<% } %>
</table>
<% if (session.user) { %>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>